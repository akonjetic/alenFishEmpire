<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:elevation="12dp"
    android:clipToOutline="true">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/golden_titles"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Fish Name Input -->
    <EditText
        android:id="@+id/etFishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Fish Name"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray_background"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <!-- Fish Price Input -->
    <EditText
        android:id="@+id/etFishPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Fish Price (â‚¬)"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray_background"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnDeleteFish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSaveFish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/golden_titles"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
